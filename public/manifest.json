{
  "manifest_version": 3,
  "name": "조대리 확장 프로그램",
  "version": "1.0",
  "description": "조달 관련 챗봇 서비스",
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "assets/icon.png"
  }
}
